{
  "name": "lyst",
  "version": "1.0",
  "description": "Amazon Price Watcher",
  "background": {
    "scripts": [
      "static/js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "declarativeContent",
    "cookies"
  ],
  "manifest_version": 2
}
